.login-page
  = render "devise/shared/links"
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "login-form" }) do |f|
    = devise_error_messages!
    %p.login-text
      %span.fa-stack.fa-lg
        %i.fa.fa-circle.fa-stack-2x
        %i.fa.fa-lock.fa-stack-1x
      = f.text_field :name, autofocus: true, placeholder: "名前", class: "login-email"
      = f.email_field :email, placeholder: "メールアドレス", class: "login-email"
      = f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "login-password"
      = f.label :password, '(英数字6文字以上)'
      = f.password_field :password_confirmation, autocomplete: "off", class: "login-password"
      = f.label :password_confirmation, 'パスワード再確認'
      = f.submit "新規登録", class: 'login-submit'